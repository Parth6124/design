<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="65dp"
        android:layout_marginTop="150dp"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Please Sign in to continue"
        android:textStyle="bold"
        android:layout_below="@+id/login"/>
    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Username : "
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="300dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user"
        android:layout_marginTop="13dp"/>
    <TextView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Password :"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="400dp"/>
    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_marginTop="13dp"/>

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="30dp"
        android:textColor="#fff"
        android:backgroundTint="#0A1D20"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="500dp"

        />
    <ImageView
        android:id="@+id/iconlogin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/login"
        android:layout_marginTop="500dp"
        android:layout_toRightOf="@+id/loginbtn"/>
    <TextView
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do You Want to Forget Password ? => "
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/loginbtn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/fogpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Passwoed "
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#FF5E5E"
        android:layout_below="@+id/loginbtn"
        android:layout_toRightOf="@+id/forget"
        android:layout_marginTop="20dp"

        />
    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have any account => "
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:backgroundTint="#0A1D20"
        android:textColor="#FF5E5E"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="65dp"
        />


</RelativeLayout>

